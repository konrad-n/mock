{
  // Ujednolicona struktura dla wszystkich specjalizacji
  "specialization": {
    "name": "String - Nazwa specjalizacji",
    "code": "String - Unikatowy identyfikator",
    "version": "String - Identyfikator wersji (np. 'CMKP 2023')",
    "hasModules": "Boolean - Czy program ma strukturę modułową",
    "totalDuration": {
      "years": "Number - Lata",
      "months": "Number - Miesiące",
      "days": "Number - Dni"
    },
    "totalWorkingDays": "Number - Łączna liczba dni roboczych",
    "basicInfo": {
      "targetGroup": "String - Opis grupy docelowej",
      "qualificationProcedure": "String - Informacje o procedurze kwalifikacyjnej"
    },

    // Moduły - zawsze jako tablica, nawet dla specjalizacji jednomodułowych
    "modules": [
      {
        "moduleId": "Number - Unikatowy identyfikator",
        "type": "String - Typ modułu (Basic/Specialistic/Unified)",
        "name": "String - Nazwa modułu",
        "code": "String - Kod modułu",
        "duration": {
          "years": "Number - Lata",
          "months": "Number - Miesiące",
          "days": "Number - Dni"
        },
        "workingDays": "Number - Dni robocze w module",

        // Kursy w ramach modułu
        "courses": [
          {
            "id": "Number - ID kursu",
            "name": "String - Nazwa kursu",
            "weeks": "Number - Czas trwania w tygodniach",
            "workingDays": "Number - Dni robocze",
            "required": "Boolean - Czy wymagany"
          }
        ],

        // Staże w ramach modułu
        "internships": [
          {
            "id": "Number - ID stażu",
            "name": "String - Nazwa stażu",
            "weeks": "Number - Czas trwania w tygodniach",
            "workingDays": "Number - Dni robocze",
            "isBasic": "Boolean - Czy to staż podstawowy",
            "location": "String - Wymagania dotyczące miejsca (jeśli są)"
          }
        ],

        // Procedury w ramach modułu
        "procedures": [
          {
            "id": "Number - ID procedury",
            "name": "String - Nazwa procedury",
            "type": "String - Typ lub kategoria",
            "requiredCountA": "Number - Wymagana liczba dla kodu A (wykonanie samodzielnie)",
            "requiredCountB": "Number - Wymagana liczba dla kodu B (asysta)",
            "internshipId": "Number - Powiązany staż"
          }
        ],

        // Kolokwia (opcjonalne)
        "yearlyColloquia": [
          {
            "id": "Number - ID kolokwium",
            "name": "String - Nazwa kolokwium",
            "topics": [ "String - Lista tematów" ]
          }
        ],

        // Wymagane umiejętności praktyczne (opcjonalne)
        "requiredPracticalSkills": [ "String - Lista wymaganych umiejętności" ]
      }
    ],

    // Wspólne dla całej specjalizacji
    "selfEducation": {
      "daysPerYear": "Number - Dni na rok",
      "totalDays": "Number - Łączna liczba dni",
      "description": "String - Opis wymogów samokształcenia"
    },

    "holidays": {
      "vacationDays": "Number - Dni urlopowe",
      "nationalHolidays": "Number - Dni świąteczne",
      "examPreparationDays": "Number - Dni na przygotowanie do egzaminu"
    },

    "medicalShifts": {
      "hoursPerWeek": "Number - Godziny tygodniowo",
      "description": "String - Opis wymogów dyżurów medycznych"
    },

    "procedureCodeDescription": {
      "codeA": "String - Opis kodu A",
      "codeB": "String - Opis kodu B"
    },

    "examinationInfo": {
      "examType": "String - Typ egzaminu",
      "components": [
        {
          "name": "String - Nazwa składowej egzaminu",
          "description": "String - Opis składowej"
        }
      ]
    }
  }
}