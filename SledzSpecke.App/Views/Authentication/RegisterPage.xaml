<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SledzSpecke.App.Views.Authentication.RegisterPage"
    xmlns:vm="clr-namespace:SledzSpecke.App.ViewModels.Authentication"
    x:DataType="vm:RegisterViewModel"
    Title="Rejestracja">

    <ScrollView>
        <Grid RowDefinitions="Auto, *, Auto"
              Padding="20"
              VerticalOptions="FillAndExpand">
            <!-- Nagłówek -->
            <VerticalStackLayout Grid.Row="0"
                                 Spacing="10"
                                 Margin="0,20,0,20">
                <Image Source="app_logo.png"
                       HeightRequest="80"
                       WidthRequest="80"
                       HorizontalOptions="Center"/>
                <Label Text="Rejestracja"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Formularz rejestracji -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="15"
                                 VerticalOptions="Center"
                                 x:DataType="vm:RegisterViewModel">
                <!-- Informacje o użytkowniku -->
                <Label Text="Informacje osobiste"
                       FontSize="18"
                       FontAttributes="Bold"/>
                <Entry Placeholder="Nazwa użytkownika"
                       Text="{Binding Username}"
                       BackgroundColor="Transparent"/>
                <Entry Placeholder="Email"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       BackgroundColor="Transparent"/>
                <Entry Placeholder="Hasło"
                       Text="{Binding Password}"
                       IsPassword="True"
                       BackgroundColor="Transparent"/>
                <Entry Placeholder="Potwierdź hasło"
                       Text="{Binding ConfirmPassword}"
                       IsPassword="True"
                       BackgroundColor="Transparent"/>
                <Label Text="Hasła nie pasują do siebie!"
                       IsVisible="{Binding PasswordsNotMatch, Converter={StaticResource InvertedBoolConverter}}"
                       TextColor="Red"/>

                <!-- Wybór specjalizacji -->
                <Label Text="Wybierz specjalizację"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,10,0,0"/>
                <Picker ItemsSource="{Binding AvailableSpecializations}"
                        SelectedItem="{Binding SelectedSpecialization}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Wybierz specjalizację"
                        BackgroundColor="Transparent"/>

                <!-- Wybór wersji SMK -->
                <Label Text="Wybierz wersję SMK"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,10,0,0"/>
                <HorizontalStackLayout Spacing="20"
                                       x:DataType="vm:RegisterViewModel">
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding IsNewSmkVersion}"/>
                        <Label Text="Nowy SMK"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding IsOldSmkVersion}"/>
                        <Label Text="Stary SMK"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <!-- Przycisk rejestracji -->
                <Button Text="Zarejestruj się"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>

            <!-- Stopka -->
            <VerticalStackLayout Grid.Row="2"
                                 Spacing="10"
                                 Margin="0,20,0,0">
                <Label Text="Masz już konto?"
                       HorizontalOptions="Center"/>
                <Button Text="Zaloguj się"
                        Command="{Binding GoToLoginCommand}"
                        Style="{StaticResource OutlineButton}"/>
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"
                                   Margin="0,10"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>