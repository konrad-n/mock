<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledzSpecke.App.Views.Courses.AddEditCoursePage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Informacja o module (widoczna tylko gdy istnieje) -->
            <Frame IsVisible="{Binding ModuleInfo, Converter={StaticResource StringToBoolConverter}}"
                   Style="{StaticResource CardFrame}" Padding="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding ModuleInfo}" TextColor="{StaticResource PrimaryColor}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Sekcja wspólna dla obu wersji SMK -->
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">
                    <!-- Typ kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Wybierz typ kursu:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Picker ItemsSource="{Binding AvailableCourseTypes}" 
                                SelectedItem="{Binding SelectedCourseType}"
                                Title="Wybierz typ kursu"
                                BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Pola dla starej wersji SMK -->
            <Frame IsVisible="{Binding IsOldSmkVersion}" Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Kurs specjalizacyjny" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextColor}"/>

                    <!-- Uznanie lub zwolnienie z realizacji -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Uznanie lub zwolnienie z realizacji:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Picker ItemsSource="{Binding AvailableRecognitionTypes}" 
                                SelectedItem="{Binding SelectedRecognitionType}"
                                Title="Wybierz rodzaj uznania lub zwolnienia"
                                BackgroundColor="Transparent"/>
                    </VerticalStackLayout>

                    <!-- Nazwa kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nazwa kursu:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Picker ItemsSource="{Binding AvailableCourseTypes}" 
                                SelectedItem="{Binding SelectedCourseType}"
                                Title="Wybierz kurs"
                                BackgroundColor="Transparent"/>
                        <Entry Text="{Binding CourseName}" Placeholder="Podaj nazwę kursu" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Numer kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Numer kursu:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Grid ColumnDefinitions="*, Auto">
                            <Entry Grid.Column="0" Text="{Binding CourseNumber}" Placeholder="Podaj numer kursu" BackgroundColor="Transparent" />
                            <Button Grid.Column="1" Text="Wybierz" 
                                    Command="{Binding SelectCourseNumberCommand}" 
                                    Style="{StaticResource OutlineButton}"
                                    Margin="5,0,0,0"/>
                        </Grid>
                        <Label Text="Dla kursów realizowanych po 01.01.2020 wybierz kurs z listy" 
                               FontSize="12" TextColor="#FF0000"/>
                    </VerticalStackLayout>

                    <!-- Nazwa podmiotu prowadzącego kurs -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nazwa podmiotu prowadzącego kurs:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Grid ColumnDefinitions="*, Auto">
                            <Entry Grid.Column="0" Text="{Binding InstitutionName}" 
                                   Placeholder="Wpisz nazwę podmiotu prowadzącego kurs" 
                                   BackgroundColor="Transparent" />
                            <Button Grid.Column="1" Text="Wybierz" 
                                    Command="{Binding SelectInstitutionCommand}" 
                                    Style="{StaticResource OutlineButton}"
                                    Margin="5,0,0,0"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Rok szkolenia, numer kolejny, data ukończenia -->
                    <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto" ColumnSpacing="10" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="Rok szkolenia:" 
                               FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="Numer kolejny kursu:" 
                               FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Label Grid.Row="0" Grid.Column="2" Text="Data ukończenia:" 
                               FontAttributes="Bold" TextColor="{StaticResource TextColor}" />

                        <Picker Grid.Row="1" Grid.Column="0" 
                                ItemsSource="{Binding AvailableYears}" 
                                SelectedItem="{Binding Year}" 
                                BackgroundColor="Transparent" />
                        <Entry Grid.Row="1" Grid.Column="1" 
                               Text="{Binding CourseSequenceNumber}" 
                               Keyboard="Numeric" 
                               BackgroundColor="Transparent" />
                        <DatePicker Grid.Row="1" Grid.Column="2" 
                                   Date="{Binding CompletionDate}" 
                                   Format="D" 
                                   BackgroundColor="Transparent" />
                    </Grid>

                    <!-- Akceptacja -->
                    <Label Text="Akceptacja" FontAttributes="Bold" TextColor="{StaticResource TextColor}" Margin="0,10,0,0" />
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding RequiresApproval, Converter={StaticResource InvertedBoolConverter}}" />
                        <Label Text="Kurs zaliczony na podstawie elektronicznego zaświadczenia o ukończeniu kursu. Nie wymaga dodatkowej akceptacji"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Pola certyfikatu - widoczne tylko gdy kurs nie wymaga akceptacji -->
                    <VerticalStackLayout Spacing="10" IsVisible="{Binding RequiresApproval, Converter={StaticResource InvertedBoolConverter}}">
                        <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto" ColumnSpacing="10" RowSpacing="5">
                            <Label Grid.Row="0" Grid.Column="0" Text="Numer zaświadczenia o ukończeniu kursu:" 
                                   FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                            <Label Grid.Row="0" Grid.Column="1" Text="Data wygenerowania zaświadczenia:" 
                                   FontAttributes="Bold" TextColor="{StaticResource TextColor}" />

                            <Entry Grid.Row="1" Grid.Column="0" 
                                   Text="{Binding CertificateNumber}" 
                                   Placeholder="Podaj numer zaświadczenia" 
                                   BackgroundColor="Transparent" />
                            <DatePicker Grid.Row="1" Grid.Column="1" 
                                       Date="{Binding CertificateIssueDate}" 
                                       Format="D" 
                                       BackgroundColor="Transparent" />
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Pola dla nowej wersji SMK -->
            <Frame IsVisible="{Binding IsOldSmkVersion, Converter={StaticResource InvertedBoolConverter}}" Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="15">
                    <!-- Nazwa kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nazwa kursu:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Entry Text="{Binding CourseName}" Placeholder="Podaj nazwę kursu" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Numer kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Numer kursu:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Entry Text="{Binding CourseNumber}" Placeholder="Podaj numer kursu (opcjonalnie)" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Instytucja -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Instytucja prowadząca:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Entry Text="{Binding InstitutionName}" Placeholder="Podaj nazwę instytucji" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Data ukończenia -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Data ukończenia:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <DatePicker Date="{Binding CompletionDate}" Format="D" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Rok szkolenia -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Rok szkolenia:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Picker ItemsSource="{Binding AvailableYears}" 
                                SelectedItem="{Binding Year}" 
                                BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Numer kolejny kursu -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Numer kolejny kursu w roku:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <Entry Text="{Binding CourseSequenceNumber}" Keyboard="Numeric" BackgroundColor="Transparent" />
                    </VerticalStackLayout>

                    <!-- Informacje o certyfikacie -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Certyfikat:" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                        <HorizontalStackLayout Spacing="10">
                            <CheckBox IsChecked="{Binding HasCertificate}" />
                            <Label Text="Kurs posiada certyfikat" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5" IsVisible="{Binding HasCertificate}">
                        <Label Text="Numer certyfikatu:" TextColor="{StaticResource TextMutedColor}" />
                        <Entry Text="{Binding CertificateNumber}" Placeholder="Podaj numer certyfikatu" BackgroundColor="Transparent" />

                        <Label Text="Data certyfikatu:" TextColor="{StaticResource TextMutedColor}" />
                        <DatePicker Date="{Binding CertificateDate}" Format="D" BackgroundColor="Transparent" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Przyciski akcji -->
            <VerticalStackLayout Spacing="10" Margin="0,10,0,20">
                <Button Text="Zapisz" Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}" Style="{StaticResource PrimaryButton}" />
                <Button Text="Anuluj" Command="{Binding CancelCommand}" Style="{StaticResource OutlineButton}" />
            </VerticalStackLayout>

            <!-- Wskaźnik aktywności -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
