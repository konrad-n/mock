<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledzSpecke.App.Views.Procedures.AddEditProcedurePage"
             xmlns:vm="clr-namespace:SledzSpecke.App.ViewModels.Procedures"
             x:DataType="vm:AddEditProcedureViewModel"
             Title="{Binding Title}">
        <ScrollView>
                <VerticalStackLayout Padding="20"
                                     Spacing="20"
                                     x:DataType="vm:AddEditProcedureViewModel">
                        <!-- Informacja o module (widoczna tylko gdy istnieje) -->
                        <Frame IsVisible="{Binding ModuleInfo, Converter={StaticResource StringToBoolConverter}}"
                               Style="{StaticResource CardFrame}"
                               Padding="15">
                                <VerticalStackLayout Spacing="5"
                                                     x:DataType="vm:AddEditProcedureViewModel">
                                        <Label Text="{Binding ModuleInfo}"
                                               TextColor="{StaticResource PrimaryColor}"/>
                                </VerticalStackLayout>
                        </Frame>

                        <!-- Sekcja wspólna dla obu wersji SMK -->
                        <Frame Style="{StaticResource CardFrame}">
                                <VerticalStackLayout Spacing="15"
                                                     x:DataType="vm:AddEditProcedureViewModel">
                                        <!-- Data wykonania -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Data wykonania:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <DatePicker Date="{Binding Date}"
                                                            Format="D"
                                                            BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Staż - dla obu wersji SMK -->
                                        <VerticalStackLayout Spacing="5">
                                                <Grid ColumnDefinitions="*, Auto">
                                                        <Label Grid.Column="0"
                                                               Text="Nazwa stażu:"
                                                               FontAttributes="Bold"
                                                               TextColor="{StaticResource TextColor}"/>
                                                        <CheckBox Grid.Column="1"
                                                                  IsChecked="{Binding ShowOnlyActiveInternships}"/>
                                                        <Label Grid.Column="1"
                                                               Text="Tylko aktywne"
                                                               VerticalOptions="Center"
                                                               HorizontalOptions="End"
                                                               Margin="25,0,0,0"/>
                                                </Grid>
                                                <Picker ItemsSource="{Binding AvailableInternships}"
                                                        SelectedItem="{Binding SelectedInternship}"
                                                        ItemDisplayBinding="{Binding DisplayName}"
                                                        Title="Wybierz staż"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>
                                </VerticalStackLayout>
                        </Frame>

                        <!-- Pola dla starej wersji SMK -->
                        <Frame Style="{StaticResource CardFrame}"
                               IsVisible="{Binding IsOldSmkVersion}">
                                <VerticalStackLayout Spacing="15"
                                                     x:DataType="vm:AddEditProcedureViewModel">
                                        <Label Text="Dane zabiegu (Stary SMK):"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource PrimaryColor}"/>

                                        <!-- Data -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Data:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <DatePicker Date="{Binding Date}"
                                                            Format="D"
                                                            BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Rok -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Rok:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableYears}"
                                                        SelectedItem="{Binding Year}"
                                                        Title="Wybierz uzupełnienie po weryfikacji"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Operator/Asysta -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Kod zabiegu:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableOperatorCodes}"
                                                        SelectedItem="{Binding OldSmkOperatorCode}"
                                                        Title="Wybierz operator/asysta"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Osoba wykonująca -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Osoba wykonująca:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Entry Text="{Binding PerformingPerson}"
                                                       Placeholder="Wpisz osobę wykonującą"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Miejsce wykonania -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Miejsce wykonania:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Grid ColumnDefinitions="*, Auto">
                                                        <Picker Grid.Column="0"
                                                                ItemsSource="{Binding AvailableLocations}"
                                                                SelectedItem="{Binding Location}"
                                                                Title="Wybierz miejsce wykonania"
                                                                BackgroundColor="Transparent"/>
                                                        <Button Grid.Column="1"
                                                                Text="+"
                                                                Command="{Binding AddLocationCommand}"
                                                                WidthRequest="40"
                                                                Margin="5,0,0,0"
                                                                Style="{StaticResource OutlineButton}"/>
                                                </Grid>
                                        </VerticalStackLayout>

                                        <!-- Staż -->
                                        <VerticalStackLayout Spacing="5">
                                                <Grid ColumnDefinitions="*, Auto">
                                                        <Label Grid.Column="0"
                                                               Text="Nazwa stażu:"
                                                               FontAttributes="Bold"
                                                               TextColor="{StaticResource TextColor}"/>
                                                        <CheckBox Grid.Column="1"
                                                                  IsChecked="{Binding ShowOnlyActiveInternships}"/>
                                                        <Label Grid.Column="1"
                                                               Text="Tylko aktywne"
                                                               VerticalOptions="Center"
                                                               HorizontalOptions="End"
                                                               Margin="25,0,0,0"/>
                                                </Grid>
                                                <Picker ItemsSource="{Binding AvailableInternships}"
                                                        SelectedItem="{Binding SelectedInternship}"
                                                        ItemDisplayBinding="{Binding DisplayName}"
                                                        Title="Wybierz staż"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Inicjały pacjenta -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Inicjały pacjenta:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Entry Text="{Binding PatientInitials}"
                                                       Placeholder="Wpisz inicjały pacjenta"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Płeć pacjenta -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Płeć pacjenta:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableGenders}"
                                                        SelectedItem="{Binding PatientGender}"
                                                        Title="Wybierz płeć pacjenta"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Dane osoby wykonującej I i II asystę -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Dane osoby wykonującej I i II asystę:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Entry Text="{Binding AssistantData}"
                                                       Placeholder="Wpisz dane asystentów"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Procedura z grupy -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Procedura z grupy:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Entry Text="{Binding ProcedureGroup}"
                                                       Placeholder="Wpisz procedury z grupy"
                                                       BackgroundColor="Transparent"/>
                                                <Label Text="Wymagane tylko gdy procedura zawiera listę, np.: procedura A, procedura B, procedura C"
                                                       FontSize="12"
                                                       TextColor="{StaticResource TextMutedColor}"/>
                                        </VerticalStackLayout>

                                        <!-- Status - readonly -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Status:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Label Text="Wykonana"
                                                       TextColor="{StaticResource PrimaryColor}"
                                                       FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                </VerticalStackLayout>
                        </Frame>

                        <!-- Pola dla nowej wersji SMK -->
                        <Frame Style="{StaticResource CardFrame}"
                               IsVisible="{Binding IsOldSmkVersion, Converter={StaticResource InvertedBoolConverter}}">
                                <VerticalStackLayout Spacing="15"
                                                     x:DataType="vm:AddEditProcedureViewModel">
                                        <!-- Kod procedury -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Kod procedury:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableProcedureCodes}"
                                                        SelectedItem="{Binding Code}"
                                                        Title="Wybierz kod procedury"
                                                        BackgroundColor="Transparent"/>
                                                <Entry Text="{Binding Code}"
                                                       Placeholder="Podaj kod/nazwę procedury"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Typ wykonania - Operator (A) / Asysta (B) -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Typ wykonania:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableOperatorCodes}"
                                                        SelectedItem="{Binding OperatorCode}"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Miejsce wykonania -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Miejsce wykonania:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Entry Text="{Binding Location}"
                                                       Placeholder="Podaj miejsce wykonania"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Informacje o pacjencie -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Informacje o pacjencie:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>

                                                <!-- Inicjały pacjenta -->
                                                <Entry Text="{Binding PatientInitials}"
                                                       Placeholder="Podaj inicjały pacjenta"
                                                       BackgroundColor="Transparent"/>

                                                <!-- Płeć pacjenta -->
                                                <Picker ItemsSource="{Binding AvailableGenders}"
                                                        SelectedItem="{Binding PatientGender}"
                                                        Title="Wybierz płeć"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Dane asysty -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Dane asysty:"
                                                       TextColor="{StaticResource TextMutedColor}"/>
                                                <Entry Text="{Binding AssistantData}"
                                                       Placeholder="Podaj dane asysty"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Grupa procedur -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Grupa procedur:"
                                                       TextColor="{StaticResource TextMutedColor}"/>
                                                <Entry Text="{Binding ProcedureGroup}"
                                                       Placeholder="Podaj grupę procedur"
                                                       BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>

                                        <!-- Status -->
                                        <VerticalStackLayout Spacing="5">
                                                <Label Text="Status:"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource TextColor}"/>
                                                <Picker ItemsSource="{Binding AvailableStatuses}"
                                                        SelectedItem="{Binding Status}"
                                                        BackgroundColor="Transparent"/>
                                        </VerticalStackLayout>
                                </VerticalStackLayout>
                        </Frame>

                        <!-- Przyciski akcji -->
                        <VerticalStackLayout Spacing="10"
                                             Margin="0,10,0,20">
                                <Button Text="Zapisz"
                                        Command="{Binding SaveCommand}"
                                        IsEnabled="{Binding CanSave}"
                                        Style="{StaticResource PrimaryButton}"/>
                                <Button Text="Anuluj"
                                        Command="{Binding CancelCommand}"
                                        Style="{StaticResource OutlineButton}"/>
                        </VerticalStackLayout>

                        <!-- Wskaźnik aktywności -->
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                           IsVisible="{Binding IsBusy}"
                                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
        </ScrollView>
</ContentPage>