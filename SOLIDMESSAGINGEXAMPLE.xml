  const unreadCount = alerts?.filter(alert => !alert.isRead).length ?? 0;

  return (
    <div className="relative w-[26px] mr-1.5">
      <Bell 
        className={cn(
          "h-6 w-6",
          unreadCount > 0 && "text-red-500 vibrate"
