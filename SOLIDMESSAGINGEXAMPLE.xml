                value={blockReason}
                onChange={(e) => setBlockReason(e.target.value)}
                placeholder="Pow√≥d zablokowania..."
              />
              <DialogFooter>
                <Button
                  variant="secondary"
                  onClick={() => setBlockDialogOpen(false)}
