          <Dialog open={resolveDialogOpen} onOpenChange={setResolveDialogOpen}>
            <DialogContent>
              <DialogHeader>
                <DialogTitle>Podaj rozwiƒÖzanie ticketu</DialogTitle>
              </DialogHeader>
              <Input
                value={resolution}
                onChange={(e) => setResolution(e.target.value)}
