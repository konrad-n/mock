                  Anuluj
                </Button>
                <Button
                  onClick={() => {
                    blockTicket.mutate({ ticketId: ticket.id, reason: blockReason });
                    setBlockDialogOpen(false);
                    setBlockReason("");
                  }}
                  disabled={!blockReason.trim()}
                >
                  Zablokuj
                </Button>
              </DialogFooter>
            </DialogContent>
          </Dialog>

          <Dialog open={unblockDialogOpen} onOpenChange={setUnblockDialogOpen}>
            <DialogContent>
              <DialogHeader>
                <DialogTitle>Podaj pow√≥d odblokowania ticketu</DialogTitle>
              </DialogHeader>
              <Input
                value={unblockReason}
                onChange={(e) => setUnblockReason(e.target.value)}
                placeholder="Pow√≥d odblokowania..."
              />
              <DialogFooter>
                <Button
                  variant="secondary"
                  onClick={() => setUnblockDialogOpen(false)}
                >
                  Anuluj
                </Button>
                <Button
                  onClick={() => {
                    unblockTicket.mutate({ ticketId: ticket.id, reason: unblockReason });
                    setUnblockDialogOpen(false);
                    setUnblockReason("");
                  }}
                  disabled={!unblockReason.trim()}
